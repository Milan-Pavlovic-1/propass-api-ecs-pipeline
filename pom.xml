	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>3.0.5</version>
		<relativePath /> <!-- lookup parent from repository -->
	</parent>
	<groupId>net.altitude-tech</groupId>
	<artifactId>propass-parent</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>propass-parent</name>
	<packaging>pom</packaging>
	<description>Propass parent project</description>

	<properties>
		<java.version>17</java.version>
		<spring-cloud.version>2022.0.2</spring-cloud.version>
		<propass.version>0.0.1-SNAPSHOT</propass.version>
		<modelmapper.version>3.1.1</modelmapper.version>
		<typetools.version>0.6.3</typetools.version>
		<testcontainers.version>1.18.0</testcontainers.version>
		<wiremock.version>2.27.2</wiremock.version>
		<javax.servlet-api.version>4.0.1</javax.servlet-api.version>
		<retrofit.version>2.9.0</retrofit.version>
		<jjwt.version>0.11.5</jjwt.version>
		<spring-security-jwt.version>1.1.1.RELEASE</spring-security-jwt.version>
		<hypersistence-utils-hibernate.version>3.3.2</hypersistence-utils-hibernate.version>
		<springdoc-openapi.version>2.1.0</springdoc-openapi.version>
		<aws-secretsmanager-jdbc.version>1.0.12</aws-secretsmanager-jdbc.version>
		<spring-cloud-starter-aws-secrets-manager-config.version>2.4.4</spring-cloud-starter-aws-secrets-manager-config.version>
		<graalvm.version>22.3.2</graalvm.version>
		<itextpdf.version>5.5.13.3</itextpdf.version>
		<zxing.version>3.5.1</zxing.version>
	</properties>

	<modules>
		<module>propass-auth-service</module>
		<module>propass-monolith-api</module>
		<module>propass-user-service</module>
		<module>propass-commons</module>
		<module>propass-flight-booking-parent</module>
		<module>propass-api-gateway</module>
		<module>propass-flight-service</module>
		<module>propass-voucher-service</module>
		<module>propass-payment-service</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework.cloud</groupId>
				<artifactId>spring-cloud-dependencies</artifactId>
				<version>
					${spring-cloud.version}</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			<dependency>
				<groupId>
					net.altitude-tech</groupId>
				<artifactId>propass-commons</artifactId>
				<version>
